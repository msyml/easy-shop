<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorbackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_shopcart_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iSC_10dp"
            android:background="@color/shopcart_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item_shopcart_shopselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/iSC_10dp"
                android:paddingLeft="@dimen/iSC_15dp"
                android:paddingRight="@dimen/iSC_15dp"
                android:paddingTop="@dimen/iSC_10dp"
                android:src="@mipmap/shopcart_check_true" />

            <TextView
                android:id="@+id/item_shopcart_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/shopcart_shop"
                android:drawablePadding="@dimen/iSC_5dp"
                android:padding="@dimen/iSC_10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorview"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/iSC_1dp"
                android:background="@color/shopcart_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/iSC_15dp"
                    android:layout_marginRight="@dimen/iSC_15dp"
                    android:src="@mipmap/shopcart_check_true"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/item_shopcart_clothname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/iSC_10dp"
                    android:paddingTop="@dimen/iSC_10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_shopcart_clothselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/iSC_15dp"
                    android:src="@mipmap/shopcart_check_true" />

                <ImageView
                    android:id="@+id/item_shopcart_cloth_pic"
                    android:layout_width="@dimen/iSC_60dp"
                    android:layout_height="@dimen/iSC_60dp"
                    android:layout_margin="@dimen/iSC_10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_shopcart_cloth_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/menuCenter"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/iSC_5dp"
                        android:layout_marginTop="@dimen/iSC_5dp">

                        <TextView
                            android:id="@+id/item_shopcart_cloth_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/item_shopcart_cloth_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/iSC_10dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/item_shopcart_cloth_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/shopcart_minus_grey" />

                        <TextView
                            android:id="@+id/item_shopcart_cloth_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/iSC_5dp"
                            android:background="@drawable/shape_shopcart_add_btn"
                            android:paddingBottom="2dp"
                            android:paddingLeft="@dimen/iSC_20dp"
                            android:paddingRight="@dimen/iSC_20dp"
                            android:paddingTop="2dp" />

                        <ImageView
                            android:id="@+id/item_shopcart_cloth_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/iSC_5dp"
                            android:src="@mipmap/shopcart_add_red" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="@dimen/iSC_1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/iSC_10dp"
                    android:layout_marginTop="@dimen/iSC_10dp"
                    android:background="#dddddd" />

                <ImageView
                    android:id="@+id/item_shopcart_cloth_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/iSC_20dp"
                    android:src="@mipmap/shopcart_delete" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iSC_1dp"
        android:background="@color/shopcart_back" />

</LinearLayout>